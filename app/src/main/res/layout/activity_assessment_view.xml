<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssessmentViewActivity">

    <TextView
        android:id="@+id/assessmentTitle"
        android:layout_width="194dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="26dp" />

    <TextView
        android:id="@+id/assessmentDateTime"
        android:layout_width="194dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/assessmentTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="77dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/assessmentDescription"
        android:layout_width="199dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/assessmentTitle"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:text="TextView" />

    <Button
        android:id="@+id/button6"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:text="@string/edit_assessment_button" />

    <Button
        android:id="@+id/button7"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/assessmentTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-153dp"
        android:layout_marginBottom="19dp"
        android:onClick="deleteAssessment"
        android:text="@string/delete_assessment_button" />
</RelativeLayout>