<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssessmentEdit">


    <Button
        android:id="@+id/button8"
        android:layout_width="299dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="saveAssessment"
        android:text="@string/save_assessment_button"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="389dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="103dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="32dp"
        android:text="Code"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/EditAssessmentCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:ems="10"
        android:hint="Course Code"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EditAssessmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/EditAssessmentCode"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"
        android:ems="10"
        android:hint="Assessment Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:layout_alignStart="@+id/textView16"
        android:layout_alignTop="@+id/EditAssessmentName"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/EditAssessmentDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/EditAssessmentCode"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EditAssessmentDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/EditAssessmentCode"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="239dp"
        android:ems="10"
        android:hint="Date/Time"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView16"
        android:layout_alignTop="@+id/EditAssessmentDescription"
        android:text="Description"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="107dp"
        android:layout_height="46dp"
        android:layout_alignStart="@+id/textView16"
        android:layout_alignTop="@+id/EditAssessmentDateTime"
        android:text="Date/Time"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>